.feed-item
  padding 30px 30px 20px
  margin 7px 0 6px 0
  background #fff
  border-top 1px solid #eee
  border-bottom 1px solid #eee
  box-shadow 0 2px 5px #eee
  .feed-source
    display flex
    width 100%
    height 50px
    .flex1
      flex 1
    .flex8
      flex 8
    .feed-source-text
      display inline-block
      height 45px
      line-height 45px
      margin-left 15px
      color #a0acac
      font-size 26px
      vertical-align top
    .item-more
      display inline-block
      width 40px
      height 45px
      text-align right
    .avatar
      position relative
      display inline-block
      image, img
        display inline-block
        width 45px
        height 45px
        border-radius 45px
        top 10px
  .feed-content
    margin-top 10px
    .question
      font-size 28px
      font-weight 600
      line-height 40px
    .answer-body
      margin-top 10px
      font-size 24px
      line-height 28px
      color #5b5b5b
      .answer-actions
        margin-top 10px
        color #a0acac
        view
          display inline-block
        .dot
          width 8px
          height 8px
          border-radius 100%
          background #a0acac
          vertical-align middle
        .m_r_10
          margin-right 10px
        .link, .comments
          margin-right 10px
          font-size 24px
