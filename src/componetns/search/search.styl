.search
    width: 100%
    height: 70px
    background: #2A8CE5
    padding: 12.5px 0 12.5px 15px;
    display: flex
    .search-left
        flex: 1
        background: #4EA3E7
        .search-wrapper
            position: relative
            height 100%
        image
            position: absolute
            left: 20rpx
            top: 50%
            transform translateY(-50%)
            width: 35px
            height: 35px
        .search-input
            height 100%    
            input
                height 100%
                font-size: 26px
                padding-left: 70px
                &.search-placeholder
                    color: #fff        
    .search-right
        flex: 0 0 85px
        image
            width: 45px
            height 45px
            padding: 10px 20px
    .input-placeholder
        color: #fff

