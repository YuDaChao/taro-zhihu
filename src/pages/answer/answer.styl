.answer-container
  .question
    background #298ED5
    color #fff
    font-size 38px
    line-height 48px
    padding 40px 50px 30px
  .answer-wrap
    position relative
    background #fff
    width: 750px
    height: 150px
    .bg-half
      position absolute
      top 0
      width 750px
      height 75px
      background #298ED5
    .answerer
      position relative
      margin 0 auto
      width 630px
      height 90px
      padding 30px
      background #fff
      border 1px solid #ebebeb
      border-radius 3px
      box-shadow 0 1px 2px #ebebeb
      display flex
      .avatar
        flex 1
        width 90px
        height 90px
        image, img
          display inline-block
          width 90px
          height 90px
          border-radius 90px
      .answer-info
        flex 5
        padding 10px 20px
        line-height 38px
        text-align left
        text, span
          display block
        .answer-name
          font-size 32px
        .answer-desc
          font-size 22px
          color #808080
          line-height 28px
      .follow
        flex 2
        padding 15px 0
        font-size 22px
        span, text
          display inline-block
          padding 15px 20px
          color #40bcd0
          border 1px solid #40bcd0
          border-radius 6px
  .answer-content
    padding 30px 40px 120px
    background #fff
    text, span
      font-size 32px
      color #454545
      line-height 44px
  .answer-footer
    position fixed
    bottom 0
    height 70px
    border-top 1px solid #ebebeb
    background #fff
    width 670px
    padding 20px 40px
    display flex
    align-items center
    .good
      display flex
      flex 1
      height 40px
      border 1px solid #d1d1d1
      border-radius 5px
      padding 10px 8px
      align-items center
      image, img
        display inline-block
        width 38px
        height 38px
        vertical-align middle
      .good-num
        display inline-block
        padding 10px 4px
        font-size 24px
        vertical-align middle
    .operation-wrap
      display flex
      flex 5
      justify-content space-between
      padding-left 60px
      image, img
        display block
        margin 0 auto
        width 50px
        height 50px
      .operation-btn
        flex 1
        text-align center
        text, span
          display block
          font-size 14px
          color #5b5b5b
